{
	"compilerOptions":{
		"module": "commonjs",
		"baseUrl": "src",
		"moduleResolution": "node",
		"target": "es5",
		"sourceMap": true,
		"typeRoots": [
      "./typings",
			"./node_modules/@types"
    ],
		"lib": ["es2017"]
	},
	
	"include": [
		"src/**/*",
		"test/**/*",
		"typings/index.d.ts"
	],
	"files": [
    "typings/index.d.ts"
  ],
	"exclude": [
    "node_modules"
  ]
}
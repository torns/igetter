{
	"compilerOptions":{
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es5",
		"sourceMap": true,
		"downlevelIteration": true,
		"typeRoots": [
			"src/types/global.ts",
			"./node_modules/@types"
    ],
		"lib": ["es2017"],
		"outDir": "./dist/",
		"declaration": true,
		"declarationDir": "./dist"
	},
	
	"include": [
		"src/**/*",
		"test/**/*"
	],
	"exclude": [
    "node_modules"
  ]
}